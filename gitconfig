[include]
    path = ~/.gitconfig.local
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input
[color]
    diff = auto
    status = auto
    branch = auto
	ui = auto
[push]
	default = matching
[alias]
    br = branch
    co = checkout
    ci = commit
    cia = commit -av
    st = status --untracked-files=no
    up = pull
    pp = pull --prune
    l = log --oneline --stat
    ll = log --graph --all --oneline --decorate
[merge]
	tool = vimdiff
	stat = true
[diff]
	mnemonicprefix = true
[branch]
	autosetupmerge = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
